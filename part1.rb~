def sum arr
	sum=0
	if arr.length>0
	arr.each{|a| sum+=a}
	return sum
	else
	return 0
	end
end

def max_2_sum arr
	if(arr.length==0)
		return 0
	elsif (arr.length==1)
		return arr[0]
	else 
		arr2 = Array.new(arr.sort{|x,y| y<=>x})
		arr=arr2
		return arr[0]+arr[1]
	end
end

def sum_to_n? arr, n
	if n==0 and arr.length == 0; return true;
		elsif(arr.combination(2).detect{|i,j| i+j==n});return true;
			else return false; 
	end
end
